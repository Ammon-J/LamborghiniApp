<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_lamborghini_background"
    android:orientation="horizontal"
    tools:context=".ModelsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#0d0d0d"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/black"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/mapBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="58.5dp"
            android:layout_height="0dp"
            android:onClick="openCollectionPage"
            android:text="Map"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/dealershipBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Map" />

        <Button
            android:id="@+id/dealershipBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:onClick="openDealershipsPage"
            android:text="Dealerships"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:iconPadding="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mapBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/collectionBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Dealerships" />

        <Button
            android:id="@+id/collectionBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:onClick="openCollectionPage"
            android:text="Collection"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:iconPadding="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dealershipBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/carListBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:text="Collection" />

        <Button
            android:id="@+id/carListBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="88dp"
            android:layout_height="70dp"
            android:onClick="openModelPage"
            android:text="Models"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/collectionBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Models" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:constraint_referenced_ids="dealershipBtn,mapBtn,collectionBtn,carListBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="405dp"
        android:layout_height="750dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="60dp"
                android:fontFamily="sans-serif-thin"
                android:text="Lamborghini Models"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="38sp"
                app:layout_constraintBottom_toTopOf="@+id/scrollView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nav"
                app:layout_constraintVertical_bias="0.09" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="134dp"
                app:srcCompat="@drawable/ic_lamborghini_centenario" />

            <TextView
                android:id="@+id/centenarioText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#990D0D0D"
                android:fontFamily="sans-serif-medium"
                android:text="Centenario"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#990D0D0D"
                android:text="\nEngine Type: Gasoline V12 \nHorsepower: 770\n 0-60 mph: 2.8 seconds\n Top Speed: ~217 mph\n Price: ~$1,900,000\n"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/centenarioBtn"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/black"
                android:fontFamily="sans-serif-medium"
                android:text="Add Car To Collection"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="134dp"
                app:srcCompat="@drawable/iclamborghini_sian" />

            <TextView
                android:id="@+id/centenarioText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#990D0D0D"
                android:fontFamily="sans-serif-medium"
                android:text="Sian"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:background="#990D0D0D"
                android:text="\n EngineType: Hybrid V12\n Horsepower: 774\n 0-60: 2.7 seconds\n Top Speed: ~ 217 mph\n Price: ~$3,700,00"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/sianBtn"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="sans-serif-medium"
                android:text="Add Car To Collection"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="134dp"
                app:srcCompat="@drawable/ic_lamborghini_aventador" />

            <TextView
                android:id="@+id/aventadorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#990D0D0D"
                android:fontFamily="sans-serif-medium"
                android:text="Aventador"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#990D0D0D"
                android:text="\n Engine Type: Gasoline V12\n Horsepower: 730 \n 0-60: 2.9 seconds\n Top Speed: ~217\n Price: ~$350,000\n"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/aventadorBtn"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/black"
                android:fontFamily="sans-serif-medium"
                android:text="Add Car To Collection"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="134dp"
                app:srcCompat="@drawable/ic_lamborghini_huracan" />

            <TextView
                android:id="@+id/huracanText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#990D0D0D"
                android:fontFamily="sans-serif-medium"
                android:text="HuracÃ¡n"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#990D0D0D"
                android:text="\n Engine Type: Gasoline V10 \n Horsepower: 610-630\n 0-60 mph: 3.2 seconds \n Top Speed: ~200 mph \n Price: ~$209,000 \n"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/huracanBtn"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/black"
                android:fontFamily="sans-serif-medium"
                android:text="Add Car To Collection"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

